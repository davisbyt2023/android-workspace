<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".FirstFragment"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <Button
        android:id="@+id/button_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        app:layout_constraintBottom_toTopOf="@id/textview_second"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/_750_club" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="842" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical"
            android:gravity="bottom">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:weightSum="4">

                <View
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="#F1F1"
                    android:layout_margin="8dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:background="#363636"
                    android:layout_margin="8dp"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Item A"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Item B"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/bankCard"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_centerInParent="true"
            app:cardElevation="8dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_red"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/shyftLogo"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_fail"
                    android:layout_gravity="right"/>

                <TextView
                    android:id="@+id/numberOnCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4594 3040 5943 1234"
                    android:textSize="24sp"
                    android:textColor="#FFFFFF"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/cardHolderName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Davis Mudau"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="start"/>

                    <TextView
                        android:id="@+id/expirationDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="07/05"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="end"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <ImageView
            android:id="@+id/imageLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fail" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Email Address"
            android:inputType="textEmailAddress"
            android:layout_marginTop="16dp"
            android:padding="10dp"
            android:background="@android:drawable/editbox_background_normal" />

        <EditText
            android:id="@+id/editPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:layout_marginTop="16dp"
            android:padding="10dp"
            android:layout_marginBottom="5dp"
            android:background="@android:drawable/editbox_background_normal" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login User"
            android:layout_marginTop="16dp"
            android:background="@android:color/holo_green_light"
            android:textColor="@android:color/white" />




        <LinearLayout
        style="@style/AppTheme.Padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="320 club"
            style="@style/AppTheme.TextView.Header" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="400"
            style="@style/AppTheme.TextView.Amount" />
    </LinearLayout>

        <DatePicker
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
        android:text="25 points left to next reward"
        style="@style/AppTheme.TextView.SubHeader" />

    <TextView
        android:text="Credit health Rewards"
        style="@style/AppTheme.TextView.Header" />

    <TextView
        android:text="Credit Factors"
        style="@style/AppTheme.TextView.Header" />

    <TextView
        android:text="Account Details"
        style="@style/AppTheme.TextView.Header" />

    <TextView
        android:text="What most impacted your score this month"
        style="@style/AppTheme.TextView.SubHeader" />

    <LinearLayout
        style="@style/AppTheme.Padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total Credit"
            style="@style/AppTheme.TextView.SubHeader" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$12,800.00"
            style="@style/AppTheme.TextView.Amount" />
    </LinearLayout>

    <LinearLayout
        style="@style/AppTheme.Padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total Balances"
            style="@style/AppTheme.TextView.SubHeader" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$40,000.00"
            style="@style/AppTheme.TextView.Amount" />
    </LinearLayout>
    </LinearLayout>
</ScrollView>
